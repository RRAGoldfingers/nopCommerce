@using Nop.Plugin.RRAGoldFingers.WhatsApp.Models;
@model WhatsappSettings

@{
    Layout = "_ConfigurePlugin";
    NopHtml.SetActiveMenuItemSystemName("RRAGoldFingers configuration");
}

<form asp-controller="WhatsappAdmin" asp-action="SaveWhatsappSettings" method="post" id="configuration-form">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="WhatsappUrl" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="WhatsappUrl" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-9 offset-md-3">
            <button type="submit" name="credentials" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
